<h2>URLs <%= @category ? "in #{@category.name}" : "not categorized" %></h2>
<div class="box">
  <%= format_text @category.description if @category %>
  
  <ul class="tabs">
    <li class="active"><strong>Public URL Feed</strong></li>
  </ul>
  
  <div class="small">
    <p class="page_info fade">Page 1 &mdash; <%= page_entries_info @links, :entry_name => 'URL' %></p>
    <p class="toggle_descs">
      <a id="toggle_all_plus" class="fake_link" onclick="<%= toggle_infos(@links, 'show') %>">
        <img src="/images/interface/url_all_plus.gif" width="30" height="14" alt="Show all details" />
      </a>
      <a id="toggle_all_minus" class="fake_link" style="display: none;" onclick="<%= toggle_infos(@links, 'hide') %>">
        <img src="/images/interface/url_all_minus.gif" width="30" height="14" alt="Hide all details" />
      </a>
    </p>
    <br class="clear" />
  </div>

  <ul class="feed">
    <%= render :partial => 'link', :collection => @links %>
	</ul>

  <%= will_paginate @links %>
</div>